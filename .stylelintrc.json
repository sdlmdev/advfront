{
  "extends": ["stylelint-config-standard", "stylelint-config-standard-scss"],
  "plugins": ["stylelint-order", "stylelint-no-unsupported-browser-features"],
  "rules": {
    "plugin/no-unsupported-browser-features": [
      true,
      {
        "browsers": [
          "chrome 84, and_chr 84, ios_saf 14.5, safari 14.1, ff 68, edge 84"
        ],
        "ignore": ["css-nesting"],
        "ignorePartialSupport": true
      }
    ],
    "selector-pseudo-class-no-unknown": [
      true,
      {
        "ignorePseudoClasses": ["global"]
      }
    ],
    "selector-no-qualifying-type": [
      true,
      {
        "ignore": ["class", "attribute"]
      }
    ],
    "selector-class-pattern": null,
    "selector-attribute-quotes": null,
    "rule-empty-line-before": null,
    "declaration-block-no-duplicate-properties": true,
    "block-no-empty": true,
    "declaration-block-single-line-max-declarations": 1,
    "selector-pseudo-element-colon-notation": "double",
    "scss/at-import-partial-extension": null,
    "scss/at-import-no-partial-leading-underscore": null,
    "function-no-unknown": null,
    "at-rule-no-unknown": null,
    "color-hex-length": "long",
    "scss/at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["apply", "variants", "responsive", "screen"]
      }
    ],
    "color-named": "never",
    "color-no-invalid-hex": true,
    "comment-no-empty": true,
    "declaration-empty-line-before": null,
    "declaration-no-important": true,
    "function-calc-no-unspaced-operator": true,
    "max-nesting-depth": 3,
    "no-duplicate-selectors": true,
    "no-empty-source": true,
    "no-invalid-double-slash-comments": true,
    "order/order": ["custom-properties", "declarations"],
    "order/properties-order": [
      [
        "content",
        "quotes",
        {
          "properties": [
            "float",
            "display",
            "visibility",
            "position",
            "z-index",
            "top",
            "right",
            "bottom",
            "left",
            "overflow",
            "overflow-x",
            "overflow-y"
          ]
        },
        {
          "properties": [
            "flex",
            "flex-basis",
            "flex-direction",
            "flex-flow",
            "flex-grow",
            "flex-shrink",
            "flex-wrap"
          ]
        },
        {
          "properties": [
            "grid",
            "grid-area",
            "grid-template",
            "grid-template-areas",
            "grid-template-rows",
            "grid-template-columns",
            "grid-row",
            "grid-row-start",
            "grid-row-end",
            "grid-column",
            "grid-column-start",
            "grid-column-end",
            "grid-auto-rows",
            "grid-auto-columns",
            "grid-auto-flow",
            "grid-gap",
            "grid-row-gap",
            "grid-column-gap",
            "align-content",
            "align-items",
            "align-self",
            "justify-content",
            "justify-items",
            "justify-self",
            "order"
          ]
        },
        {
          "properties": [
            "table-layout",
            "border-collapse",
            "border-spacing",
            "empty-cells"
          ]
        },
        {
          "properties": [
            "columns",
            "column-gap",
            "column-fill",
            "column-rule",
            "column-rule-width",
            "column-rule-style",
            "column-rule-color",
            "column-span",
            "column-count",
            "column-width"
          ]
        },
        {
          "properties": [
            "box-sizing",
            "margin",
            "margin-top",
            "margin-right",
            "margin-bottom",
            "margin-left",
            "padding",
            "padding-top",
            "padding-right",
            "padding-bottom",
            "padding-left"
          ]
        },
        {
          "properties": [
            "width",
            "min-width",
            "max-width",
            "height",
            "min-height",
            "max-height"
          ]
        },
        {
          "properties": [
            "border",
            "border-top",
            "border-right",
            "border-bottom",
            "border-left",
            "border-width",
            "border-top-width",
            "border-right-width",
            "border-bottom-width",
            "border-left-width",
            "border-style",
            "border-top-style",
            "border-right-style",
            "border-bottom-style",
            "border-left-style",
            "border-radius",
            "border-top-left-radius",
            "border-top-right-radius",
            "border-bottom-left-radius",
            "border-bottom-right-radius",
            "border-color",
            "border-top-color",
            "border-right-color",
            "border-bottom-color",
            "border-left-color",
            "border-image",
            "border-image-source",
            "border-image-width",
            "border-image-outset",
            "border-image-repeat",
            "border-image-slice",
            "outline",
            "outline-offset",
            "outline-width",
            "outline-style",
            "outline-color",
            "box-shadow",
            "background",
            "background-attachment",
            "background-clip",
            "background-color",
            "background-image",
            "background-origin",
            "background-position",
            "background-repeat",
            "background-size",
            "opacity"
          ]
        },
        {
          "properties": [
            "color",
            "font",
            "font-size",
            "font-size-adjust",
            "font-weight",
            "font-style",
            "font-variant",
            "font-family",
            "font-stretch",
            "word-spacing",
            "letter-spacing",
            "text-transform",
            "text-shadow",
            "text-decoration",
            "text-decoration-color",
            "text-decoration-line",
            "text-decoration-style",
            "line-height",
            "text-align",
            "text-align-last",
            "text-justify",
            "text-indent",
            "white-space",
            "word-break",
            "word-wrap",
            "text-overflow",
            "vertical-align"
          ]
        },
        {
          "properties": [
            "backface-visibility",
            "perspective",
            "perspective-origin",
            "transform",
            "transform-origin",
            "transform-style"
          ]
        },
        {
          "properties": [
            "transition",
            "transition-delay",
            "transition-duration",
            "transition-property",
            "transition-timing-function"
          ]
        },
        {
          "properties": [
            "animation",
            "animation-name",
            "animation-duration",
            "animation-timing-function",
            "animation-delay",
            "animation-iteration-count",
            "animation-direction",
            "animation-fill-mode",
            "animation-play-state"
          ]
        },
        {
          "properties": [
            "resize",
            "cursor",
            "pointer-events",
            "list-style",
            "list-style-type",
            "list-style-position",
            "list-style-image",
            "counter-reset",
            "counter-increment",
            "font-smoothing",
            "osx-font-smoothing",
            "text-rendering",
            "direction",
            "tab-size",
            "caption-side",
            "page-break-before",
            "page-break-after",
            "page-break-inside",
            "clear"
          ]
        }
      ],
      {
        "unspecified": "bottom",
        "emptyLineBeforeUnspecified": "never"
      }
    ],
    "custom-property-pattern": null,
    "scss/percent-placeholder-pattern": null,
    "selector-id-pattern": null,
    "declaration-block-trailing-semicolon": null,
    "no-descending-specificity": null,
    "scss/dollar-variable-pattern": null,
    "property-no-unknown": [
      true,
      {
        "ignoreProperties": ["line-clamp"]
      }
    ]
  }
}
